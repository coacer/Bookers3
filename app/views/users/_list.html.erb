<table class="list-tb">
  <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
  </tr>
  <% users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
    </tr>
  <% end %>
</table>
