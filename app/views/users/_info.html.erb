<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "/images/no_image.jpg" %>
<table class="mypage-tb">
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>
<%= link_to edit_user_path(user), class: "btn btn-default edit_user_#{user.id}" do %>
  <%= fa_icon "wrench" %>
<% end %>
