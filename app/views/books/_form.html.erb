<div class="error-box">
  <% if @book.errors.any? %>
    <%= render 'error', errors: @book.errors %>
  <% end %>
</div>
<h2>New book</h2>
<%= form_for book, remote: true do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, class: "book_title" %><br>
  <%= f.label :opinion %><br>
  <%= f.text_area :body, class: "book_body" %><br>
  <%= f.submit "Create Book", class: "btn btn-primary" %>
<% end %>
